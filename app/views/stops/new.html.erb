<h1>New Stop</h1>


<%= form_tag(stops_url, method: 'post') do %>


  <div>
    <%= label_tag :line_id %><br />
    <%= number_field_tag :line_id %>
  </div>

  <div>
    <%= label_tag :station_id %><br />
    <%= number_field_tag :station_id %>
  </div>


  <div>
    <%= submit_tag "Create Stop" %>
  </div>
<% end %>
