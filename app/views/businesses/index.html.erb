<h1>Businesses</h1>

<p><%= link_to 'Add a New Business', new_business_url %></p>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Yelp url</th>
      <th>Neighborhood</th>
      <th>Image url</th>
      <th>Address</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @businesses.each do |business| %>
    <tr>
      <td><%= business.name %></td>
      <td><%= business.yelp_url %></td>
      <td><%= business.neighborhood.name %></td>
      <td><%= business.image_url %></td>
      <td><%= business.address %></td>

      <td><%= link_to 'Show', business_url(business) %></td>
      <td><%= link_to 'Edit', edit_business_url(business) %></td>
      <td><%= link_to 'Destroy', business_url(business), method: 'delete', data: { confirm: "Do you really want to delete this business?" } %></td>

    </tr>
  <% end %>
  </tbody>
</table>

