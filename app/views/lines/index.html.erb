<h1>Lines</h1>

<p><%= link_to 'Add a New Line', new_line_url %></p>

<table>
  <thead>
    <tr>
      <th>Color</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @lines.each do |line| %>
    <tr>
      <td><%= line.color %></td>
  
      <td><%= link_to 'Show', line_url(line) %></td>
      <td><%= link_to 'Edit', edit_line_url(line) %></td>
      <td><%= link_to 'Destroy', line_url(line), method: 'delete', data: { confirm: "Do you really want to delete this line?" } %></td>

    </tr>
  <% end %>
  </tbody>
</table>

