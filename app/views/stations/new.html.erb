<h1>New Station</h1>


<%= form_tag(stations_url, method: 'post') do %>


  <div>
    <%= label_tag :address %><br />
    <%= text_field_tag :address %>
  </div>

  <div>
    <%= label_tag :neighborhood_id %><br />
    <%= number_field_tag :neighborhood_id %>
  </div>

  <div>
    <%= label_tag :name %><br />
    <%= text_field_tag :name %>
  </div>


  <div>
    <%= submit_tag "Create Station" %>
  </div>
<% end %>
